@model EditCategoryViewModel
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Kategori Düzenle</h1>
            <p class="text-muted">Kategori bilgilerini güncelleyin</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Kategori Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label for="Name" class="form-label">Kategori Adı <span class="text-danger">*</span></label>
                                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" placeholder="Örn: Teknoloji, Spor, Ekonomi..." required />
                                    <div class="form-text">Kategori adı benzersiz olmalıdır.</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="IsActive" class="form-label">Durum</label>
                                    <div class="form-check form-switch">
                                        <input type="checkbox" id="IsActive" name="IsActive" class="form-check-input" checked="@Model.IsActive" />
                                        <label class="form-check-label" for="IsActive">Aktif</label>
                                    </div>
                                    <div class="form-text">Pasif kategoriler görünmez.</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label">Açıklama</label>
                            <textarea id="Description" name="Description" class="form-control" rows="4" placeholder="Kategori hakkında kısa bir açıklama...">@Model.Description</textarea>
                            <div class="form-text">Bu kategori altında hangi tür haberlerin yer alacağını belirtin.</div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('form').on('submit', function() {
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Güncelleniyor...');
            });
        });
    </script>
} 