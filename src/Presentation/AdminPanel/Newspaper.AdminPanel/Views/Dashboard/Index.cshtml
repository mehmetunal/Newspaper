@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h2 class="mb-1">Hoş Geldiniz, Admin!</h2>
                            <p class="text-muted mb-0">Bugün @DateTime.Now.ToString("dddd, dd MMMM yyyy")</p>
                        </div>
                        <div class="text-end">
                            <div class="h4 mb-1">@DateTime.Now.ToString("HH:mm")</div>
                            <small class="text-muted">Güncel Saat</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="stats-icon primary">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stats-number">2,847</div>
                <div class="stats-label">Toplam Kullanıcı</div>
                <div class="mt-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="badge badge-success">
                            <i class="fas fa-arrow-up me-1"></i>12.5%
                        </span>
                        <small class="text-muted">Bu ay</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="stats-icon success">
                    <i class="fas fa-newspaper"></i>
                </div>
                <div class="stats-number">1,234</div>
                <div class="stats-label">Toplam Makale</div>
                <div class="mt-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="badge badge-success">
                            <i class="fas fa-arrow-up me-1"></i>8.2%
                        </span>
                        <small class="text-muted">Bu hafta</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="stats-icon warning">
                    <i class="fas fa-eye"></i>
                </div>
                <div class="stats-number">45.2K</div>
                <div class="stats-label">Sayfa Görüntüleme</div>
                <div class="mt-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="badge badge-success">
                            <i class="fas fa-arrow-up me-1"></i>15.3%
                        </span>
                        <small class="text-muted">Bu ay</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="stats-icon danger">
                    <i class="fas fa-comments"></i>
                </div>
                <div class="stats-number">892</div>
                <div class="stats-label">Toplam Yorum</div>
                <div class="mt-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="badge badge-warning">
                            <i class="fas fa-arrow-down me-1"></i>3.1%
                        </span>
                        <small class="text-muted">Bu hafta</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-xl-8 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Ziyaretçi İstatistikleri
                    </h5>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-primary active">7 Gün</button>
                        <button type="button" class="btn btn-sm btn-outline-primary">30 Gün</button>
                        <button type="button" class="btn btn-sm btn-outline-primary">90 Gün</button>
                    </div>
                </div>
                <div class="card-body">
                    <div style="height: 300px; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                        <div class="text-center">
                            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Grafik burada görüntülenecek</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>
                        Kategori Dağılımı
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <div class="status-indicator status-active"></div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between">
                                <span>Teknoloji</span>
                                <span class="fw-bold">35%</span>
                            </div>
                            <div class="progress mt-1" style="height: 6px;">
                                <div class="progress-bar bg-primary" style="width: 35%"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <div class="status-indicator status-active"></div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between">
                                <span>Spor</span>
                                <span class="fw-bold">28%</span>
                            </div>
                            <div class="progress mt-1" style="height: 6px;">
                                <div class="progress-bar bg-success" style="width: 28%"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <div class="status-indicator status-active"></div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between">
                                <span>Ekonomi</span>
                                <span class="fw-bold">22%</span>
                            </div>
                            <div class="progress mt-1" style="height: 6px;">
                                <div class="progress-bar bg-warning" style="width: 22%"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="status-indicator status-active"></div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between">
                                <span>Diğer</span>
                                <span class="fw-bold">15%</span>
                            </div>
                            <div class="progress mt-1" style="height: 6px;">
                                <div class="progress-bar bg-info" style="width: 15%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity & Quick Actions -->
    <div class="row">
        <div class="col-xl-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Son Aktiviteler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-start mb-3">
                        <div class="flex-shrink-0">
                            <div class="user-avatar" style="width: 35px; height: 35px; font-size: 0.875rem;">
                                <i class="fas fa-user"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between">
                                <strong>Yeni kullanıcı kaydoldu</strong>
                                <small class="text-muted">2 dk önce</small>
                            </div>
                            <p class="text-muted mb-0">Ahmet Yılmaz sisteme kaydoldu</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-start mb-3">
                        <div class="flex-shrink-0">
                            <div class="user-avatar" style="width: 35px; height: 35px; font-size: 0.875rem; background: var(--gradient-success);">
                                <i class="fas fa-newspaper"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between">
                                <strong>Yeni makale yayınlandı</strong>
                                <small class="text-muted">15 dk önce</small>
                            </div>
                            <p class="text-muted mb-0">"Yapay Zeka Geleceği" makalesi yayınlandı</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-start mb-3">
                        <div class="flex-shrink-0">
                            <div class="user-avatar" style="width: 35px; height: 35px; font-size: 0.875rem; background: var(--gradient-warning);">
                                <i class="fas fa-comment"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between">
                                <strong>Yeni yorum eklendi</strong>
                                <small class="text-muted">1 saat önce</small>
                            </div>
                            <p class="text-muted mb-0">Mehmet Demir bir yorum yaptı</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-start">
                        <div class="flex-shrink-0">
                            <div class="user-avatar" style="width: 35px; height: 35px; font-size: 0.875rem; background: var(--gradient-danger);">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between">
                                <strong>Sistem uyarısı</strong>
                                <small class="text-muted">2 saat önce</small>
                            </div>
                            <p class="text-muted mb-0">Disk alanı %85 doldu</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <a href="/Articles/Create" class="btn btn-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-plus-circle fa-2x mb-2"></i>
                                <span>Yeni Makale</span>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/Users/Create" class="btn btn-success w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-user-plus fa-2x mb-2"></i>
                                <span>Yeni Kullanıcı</span>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/Categories/Create" class="btn btn-warning w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-folder-plus fa-2x mb-2"></i>
                                <span>Yeni Kategori</span>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/Comments" class="btn btn-info w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-comments fa-2x mb-2"></i>
                                <span>Yorumları Görüntüle</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 