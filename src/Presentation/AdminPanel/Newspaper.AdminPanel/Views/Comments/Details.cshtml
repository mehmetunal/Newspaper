@model CommentDetailViewModel
@{
    ViewData["Title"] = "Yorum Detayı";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Yorum Detayı</h1>
            <p class="text-muted">Yorum bilgilerini görüntüleyin</p>
        </div>
        <div class="btn-group" role="group">
            @if (Model.Comment.Status == "pending")
            {
                <button type="button" class="btn btn-success" onclick="approveComment('@Model.Comment.Id', '@Model.Comment.AuthorName')">
                    <i class="fas fa-check me-2"></i>Onayla
                </button>
                <button type="button" class="btn btn-danger" onclick="rejectComment('@Model.Comment.Id', '@Model.Comment.AuthorName')">
                    <i class="fas fa-times me-2"></i>Reddet
                </button>
            }
            <button type="button" class="btn btn-danger" onclick="deleteComment('@Model.Comment.Id', '@Model.Comment.AuthorName')">
                <i class="fas fa-trash me-2"></i>Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Comment Content -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-comment me-2"></i>
                        Yorum İçeriği
                    </h5>
                </div>
                <div class="card-body">
                    <div class="comment-content">
                        <p class="lead">@Model.Comment.Content</p>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Comment.ParentCommentContent))
                    {
                        <div class="mt-4">
                            <h6 class="text-muted">Yanıt Verilen Yorum:</h6>
                            <div class="bg-light p-3 rounded">
                                <p class="mb-0">@Model.Comment.ParentCommentContent</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Article Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-newspaper me-2"></i>
                        Haber Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Haber Başlığı:</label>
                                <p class="mb-0">@Model.Comment.ArticleTitle</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Kategori:</label>
                                <p class="mb-0">
                                    <span class="badge bg-info">@Model.Comment.CategoryName</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Haber Yazarı:</label>
                                <p class="mb-0">@Model.Comment.ArticleAuthorName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Haber Tarihi:</label>
                                <p class="mb-0">@Model.Comment.ArticlePublishedAt?.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Comment Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Yorum Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Durum:</label>
                        <div>
                            @switch (Model.Comment.Status)
                            {
                                case "pending":
                                    <span class="badge bg-warning">
                                        <i class="fas fa-clock me-1"></i>Bekliyor
                                    </span>
                                    break;
                                case "approved":
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Onaylandı
                                    </span>
                                    break;
                                case "rejected":
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times me-1"></i>Reddedildi
                                    </span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Comment.Status</span>
                                    break;
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Yazar:</label>
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm me-2">
                                <div class="avatar-initial rounded-circle bg-primary text-white">
                                    @Model.Comment.AuthorName.Substring(0, 1).ToUpper()
                                </div>
                            </div>
                            <span>@Model.Comment.AuthorName</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">E-posta:</label>
                        <p class="mb-0">@Model.Comment.AuthorEmail</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Oluşturulma Tarihi:</label>
                        <p class="mb-0">@Model.Comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>

                    @if (Model.Comment.UpdatedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Güncellenme Tarihi:</label>
                            <p class="mb-0">@Model.Comment.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    }

                    @if (Model.Comment.ApprovedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Onaylanma Tarihi:</label>
                            <p class="mb-0">@Model.Comment.ApprovedAt.Value.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    }

                    @if (Model.Comment.RejectedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Reddedilme Tarihi:</label>
                            <p class="mb-0">@Model.Comment.RejectedAt.Value.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Comment.Status == "pending")
                        {
                            <button type="button" class="btn btn-success" onclick="approveComment('@Model.Comment.Id', '@Model.Comment.AuthorName')">
                                <i class="fas fa-check me-2"></i>Onayla
                            </button>
                            <button type="button" class="btn btn-danger" onclick="rejectComment('@Model.Comment.Id', '@Model.Comment.AuthorName')">
                                <i class="fas fa-times me-2"></i>Reddet
                            </button>
                        }
                        <button type="button" class="btn btn-danger" onclick="deleteComment('@Model.Comment.Id', '@Model.Comment.AuthorName')">
                            <i class="fas fa-trash me-2"></i>Sil
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>Listeye Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approve Confirmation Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yorum Onayla</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="approveCommentAuthor"></strong> adlı kullanıcının yorumunu onaylamak istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="approveForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-2"></i>Onayla
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Reject Confirmation Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yorum Reddet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="rejectCommentAuthor"></strong> adlı kullanıcının yorumunu reddetmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="rejectForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times me-2"></i>Reddet
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yorum Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteCommentAuthor"></strong> adlı kullanıcının yorumunu silmek istediğinizden emin misiniz?</p>
                <p class="text-danger small">Bu işlem geri alınamaz!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function approveComment(commentId, authorName) {
            document.getElementById('approveCommentAuthor').textContent = authorName;
            document.getElementById('approveForm').action = '@Url.Action("Approve")/' + commentId;
            new bootstrap.Modal(document.getElementById('approveModal')).show();
        }

        function rejectComment(commentId, authorName) {
            document.getElementById('rejectCommentAuthor').textContent = authorName;
            document.getElementById('rejectForm').action = '@Url.Action("Reject")/' + commentId;
            new bootstrap.Modal(document.getElementById('rejectModal')).show();
        }

        function deleteComment(commentId, authorName) {
            document.getElementById('deleteCommentAuthor').textContent = authorName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + commentId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
} 