@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-dark fw-bold">
            <i class="bi bi-speedometer2 me-2 text-danger"></i>
            Dashboard
        </h1>
        <div class="d-flex">
            <a href="@Url.Action("Create", "Articles")" class="btn btn-danger me-2">
                <i class="bi bi-plus-circle me-1"></i>
                Yeni Haber
            </a>
            <a href="@Url.Action("Index", "Users")" class="btn btn-outline-danger">
                <i class="bi bi-people me-1"></i>
                Kullanıcılar
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-number">@Model.TotalUsers</div>
                        <div class="stat-label">Toplam Kullanıcı</div>
                    </div>
                    <div class="stat-icon">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card" style="background: linear-gradient(135deg, #28a745, #20c997);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-number">@Model.TotalArticles</div>
                        <div class="stat-label">Toplam Haber</div>
                    </div>
                    <div class="stat-icon">
                        <i class="bi bi-file-text"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card" style="background: linear-gradient(135deg, #ffc107, #fd7e14);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-number">@Model.TotalCategories</div>
                        <div class="stat-label">Toplam Kategori</div>
                    </div>
                    <div class="stat-icon">
                        <i class="bi bi-tags"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card" style="background: linear-gradient(135deg, #17a2b8, #6f42c1);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-number">@Model.TotalComments</div>
                        <div class="stat-label">Toplam Yorum</div>
                    </div>
                    <div class="stat-icon">
                        <i class="bi bi-chat-dots"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Bar -->
    <div class="filter-bar">
        <div class="row align-items-center">
            <div class="col-md-2">
                <select class="form-select">
                    <option>20</option>
                    <option>50</option>
                    <option>100</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
