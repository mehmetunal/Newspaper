                    <option>Tüm Editörler</option>
                    <option>Mehmet</option>
                    <option>Ahmet</option>
                    <option>Fatma</option>
                </select>
            </div>
            <div class="col-md-2">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="18/01/2020 - 18/02/2020">
                    <span class="input-group-text">
                        <i class="bi bi-calendar"></i>
                    </span>
                </div>
            </div>
            <div class="col-md-2">
                <button class="btn btn-danger w-100">
                    <i class="bi bi-funnel me-1"></i>
                    FİLTRELE
                </button>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Haber İçinde Ara">
                </div>
            </div>
        </div>
    </div>

