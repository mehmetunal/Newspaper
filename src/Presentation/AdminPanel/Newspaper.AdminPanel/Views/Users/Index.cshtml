@model UserListViewModel
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Kullanıcı Yönetimi</h1>
            <p class="text-muted">Sistem kullanıcılarını yönetin</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yeni Kullanıcı
        </a>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Kullanıcı ara..." value="@Model.SearchTerm" />
                        <button type="submit" class="btn btn-outline-secondary">Ara</button>
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="pageSize" class="form-select" onchange="this.form.submit()">
                        <option value="10" selected="@(Model.Users.PageSize == 10)">10 kayıt</option>
                        <option value="25" selected="@(Model.Users.PageSize == 25)">25 kayıt</option>
                        <option value="50" selected="@(Model.Users.PageSize == 50)">50 kayıt</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-refresh me-2"></i>Temizle
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-users me-2"></i>
                Kullanıcı Listesi
                <span class="badge bg-primary ms-2">@Model.Users.TotalCount</span>
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Users.Data.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Kullanıcı</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Kayıt Tarihi</th>
                                <th>Durum</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users.Data)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3">
                                                <div class="avatar-initial rounded-circle bg-primary text-white">
                                                    @user.FullName.Substring(0, 1).ToUpper()
                                                </div>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@user.FullName</div>
                                                <small class="text-muted">ID: @user.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="mailto:@user.Email" class="text-decoration-none">
                                            @user.Email
                                        </a>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                        {
                                            <a href="tel:@user.PhoneNumber" class="text-decoration-none">
                                                @user.PhoneNumber
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span title="@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")">
                                            @user.CreatedAt.ToString("dd.MM.yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Pasif
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" title="Sil" 
                                                    onclick="deleteUser('@user.Id', '@user.FullName')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Users.TotalPages > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="Kullanıcı sayfaları">
                            <ul class="pagination justify-content-center mb-0">
                                @if (Model.Users.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Users.CurrentPage - 1)" asp-route-pageSize="@Model.Users.PageSize" asp-route-searchTerm="@Model.SearchTerm">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.Users.CurrentPage - 2); i <= Math.Min(Model.Users.TotalPages, Model.Users.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.Users.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.Users.PageSize" asp-route-searchTerm="@Model.SearchTerm">
                                            @i
                                        </a>
                                    </li>
                                }

                                @if (Model.Users.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Users.CurrentPage + 1)" asp-route-pageSize="@Model.Users.PageSize" asp-route-searchTerm="@Model.SearchTerm">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Kullanıcı bulunamadı</h5>
                    <p class="text-muted">Arama kriterlerinizi değiştirmeyi deneyin veya yeni bir kullanıcı ekleyin.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>İlk Kullanıcıyı Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kullanıcı Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteUserName"></strong> adlı kullanıcıyı silmek istediğinizden emin misiniz?</p>
                <p class="text-danger small">Bu işlem geri alınamaz!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteUser(userId, userName) {
            document.getElementById('deleteUserName').textContent = userName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + userId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
} 