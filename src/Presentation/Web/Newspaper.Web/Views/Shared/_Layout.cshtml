<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Haber Portalı</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar bg-light py-2">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <a href="#" class="text-muted text-decoration-none small">Anasayfa</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-muted text-decoration-none small">Foto Galeri</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-muted text-decoration-none small">Video Galeri</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-muted text-decoration-none small">Yazarlar</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6 text-end">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <a href="#" class="text-muted text-decoration-none small me-3">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-muted text-decoration-none small me-3">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-muted text-decoration-none small me-3">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-muted text-decoration-none small">
                                <i class="fab fa-youtube"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <header class="main-header bg-danger text-white">
        <div class="container">
            <div class="row align-items-center py-3">
                <div class="col-md-4">
                    <h1 class="h3 mb-0 fw-bold">Haber Portalı</h1>
                </div>
                <div class="col-md-8">
                    <nav class="navbar navbar-expand-lg navbar-dark">
                        <div class="container-fluid p-0">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            
                            <div class="collapse navbar-collapse" id="mainNav">
                                <ul class="navbar-nav me-auto">
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">GÜNCEL</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">SİYASET</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">EĞİTİM</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">DÜNYA</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">EKONOMİ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">MAGAZİN</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">RÖPORTAJ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">SAĞLIK</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">SPOR</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">TEKNOLOJİ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fw-semibold" href="#">YAŞAM</a>
                                    </li>
                                </ul>
                                <button class="btn btn-outline-light btn-sm">MENÜ</button>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main role="main" class="py-4">
        <div class="container-fluid">
            <div class="row">
                <!-- Left Advertisement -->
                <div class="col-lg-2 d-none d-lg-block">
                    <div class="advertisement-left bg-light p-3 text-center mb-4">
                        <div class="mb-3">
                            <h6 class="text-danger fw-bold">TIKLA GELSİN</h6>
                            <img src="https://via.placeholder.com/150x80/FF6B35/FFFFFF?text=Burger+King" alt="Burger King" class="img-fluid mb-2">
                            <p class="small text-muted">tiklagelsin.com</p>
                        </div>
                        <div>
                            <img src="https://via.placeholder.com/150x200/FF6B35/FFFFFF?text=Burger+Meal" alt="Burger Meal" class="img-fluid">
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <div class="col-lg-8">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Info"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="fas fa-info-circle me-2"></i>@TempData["Info"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @RenderBody()
                </div>

                <!-- Right Advertisement -->
                <div class="col-lg-2 d-none d-lg-block">
                    <div class="advertisement-right bg-light p-3 text-center mb-4">
                        <img src="https://via.placeholder.com/150x400/FF6B35/FFFFFF?text=ACASA+PIZZA" alt="Pizza Advertisement" class="img-fluid">
                        <p class="small text-muted mt-2">ACASA PIZZANIZI</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="text-danger fw-bold mb-3">HAKKIMIZDA</h5>
                    <h6 class="text-white fw-bold">Haber Portalı</h6>
                    <p class="text-muted">
                        Türkiye'nin Kaliteli ve En Güçlü Haber Kaynağı
                    </p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="text-danger fw-bold mb-3">KATEGORİLER</h5>
                    <div class="row">
                        <div class="col-6">
                            <ul class="list-unstyled">
                                <li><a href="#" class="text-muted text-decoration-none">DÜNYA</a></li>
                                <li><a href="#" class="text-muted text-decoration-none">EĞİTİM</a></li>
                                <li><a href="#" class="text-muted text-decoration-none">EKONOMİ</a></li>
                                <li><a href="#" class="text-muted text-decoration-none">GÜNCEL</a></li>
                                <li><a href="#" class="text-muted text-decoration-none">HABERLER</a></li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <ul class="list-unstyled">
                                <li><a href="#" class="text-muted text-decoration-none">SAĞLIK</a></li>
                                <li><a href="#" class="text-muted text-decoration-none">SİYASET</a></li>
                                <li><a href="#" class="text-muted text-decoration-none">SPOR</a></li>
                                <li><a href="#" class="text-muted text-decoration-none">YAŞAM</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="text-danger fw-bold mb-3">İLETİŞİM</h5>
                    <ul class="list-unstyled">
                        <li class="text-muted mb-2">
                            <i class="fas fa-phone me-2"></i>+90 (212) 123 45 67
                        </li>
                        <li class="text-muted mb-2">
                            <i class="fas fa-envelope me-2"></i>info@haberportali.com
                        </li>
                        <li class="text-muted mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>İstanbul, Türkiye
                        </li>
                    </ul>
                    <div class="social-links mt-3">
                        <a href="#" class="text-muted me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-muted me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-muted me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-muted me-3"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-12 text-center">
                    <p class="text-muted mb-0">
                        © 2024 Haber Portalı. Tüm Hakları Saklıdır.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
